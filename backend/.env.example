# Local dev (host-installed Postgres)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/webhooktester
APP_ENV=development
PORT=8000
PUBLIC_BASE_URL=http://localhost:8000
CORS_ALLOW_ORIGINS=http://localhost:5173
POSTGRES_DB=webhooktester
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432
ENDPOINT_TTL_SECONDS=86400
REQUEST_TTL_SECONDS=86400
MAX_BODY_BYTES=1048576
CLEANUP_INTERVAL_SECONDS=60
SSE_HEARTBEAT_SECONDS=15
STREAM_QUEUE_MAXSIZE=256
DB_POOL_MIN_SIZE=1
DB_POOL_MAX_SIZE=10

# If running via docker compose, use:
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/webhooktester
